{
    "name": "smkn62/database-management",
    "description": "Database Management System untuk SMKN 62 Jakarta dengan Google Drive API",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "google/apiclient": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('data')) { mkdir('data', 0777, true); }\""
        ]
    },
    "config": {
        "process-timeout": 0
    }
}
